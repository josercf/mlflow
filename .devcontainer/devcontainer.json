{
  "name": "DevContainer AutoML .NET + MLOps",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.csdevkit"
      ]
    }
  },
  "forwardPorts": [
    5000,
    9090,
    3000
  ], 
  "postCreateCommand": "dotnet restore src/AutoMLDemo/AutoMLDemo.csproj",
  "remoteUser": "root" 
}
